<div class="units_selector">

<p class="unitsText">Loading units</p>
<select id="loadingUnitsSelector" name="loading-selector">
  <% unless session[:prefLoading] %>
    <option selected value="native" label="Isotherm Default"></option>
  <% end %>
  <% supportedLoadingUnits.each do |unit| %>
    <% if session[:prefLoading] && Classification.find(session[:prefLoading]).id == unit.id  %>
      <option selected value="<%= unit.id %>" label="<%= unit.name %>"><%= unit.name %></option>
    <% else %>
      <option value="<%= unit.id %>" label="<%= unit.name %>"><%= unit.name %></option>
    <% end %>
  <% end %>
  <% if session[:prefLoading] %>
    <option value="native" label="Isotherm Default"></option>
  <% end %>


</select>
</div>